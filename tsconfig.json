{
    "compilerOptions": {
        "target": "ES6",
        "declaration": true,
        "declarationDir": "build",
        "allowSyntheticDefaultImports": true,
        "lib": [
            "ES6",
            "DOM",
            "DOM.Iterable"
        ],
        "sourceMap": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/stories/*",
        "dist"
    ]
}